pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/minnu1102/blossom-flowers.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('blossom-flowers')
                }
            }
        }
        stage('Run Container') {
            steps {
                script {
                    sh 'docker stop blossom || true'
                    sh 'docker rm blossom || true'
                    sh 'docker run -d -p 80:80 --name blossom blossom-flowers'
                }
            }
        }
    }
}
